<h2> Articles </h2>

<ul>
  <% @articles.each do |article| %>
  <li>
    <h3><%= article.title %></h3>
    <p><%= article.body %></p>
    <p><%= link_to 'Edit', edit_article_path(article) %></p>
    <p><%= link_to 'Delete', article_path(article),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></p>
  </li>
  <% end %>
</ul>

<%= link_to 'New Article', new_article_path %>
